<h1>Tasks</h1>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <% if task.completed %>
    <li> <input type="checkbox" name="task" checked> <%= link_to task.title, "tasks/#{task.id}" %> - <%= link_to "edit", edit_task_path(task.id) %> - <%= link_to "delete", delete_task_url(task.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %></li>
    <% else %>
    <li> <input type="checkbox" name="task"> <%= link_to task.title, "tasks/#{task.id}" %> - <%= link_to "edit", edit_task_path(task.id) %> - <%= link_to "delete", delete_task_url(task.id),
        method: :delete,
        data: { confirm: "Are you sure?" } %></li>
    <% end %>
  <% end %>
</ul>

<div class="divider" role="separator">
  ------------------------------------------
</div>

<%= link_to "Add a new task", new_path, class: "btn btn-primary" %>
